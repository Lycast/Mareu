            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_edit_calendar_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>
-->

<!-- TIME -->
    <Button
        android:id="@+id/btn_picker_time"
        style="@style/Widget.MaterialComponents.TimePicker.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="17dp"
        android:text="Time"
        android:textAlignment="viewStart"
        android:textColor="#FF6F6F6F"
        app:icon="@drawable/ic_baseline_access_time_24"
        app:iconPadding="19dp"
        app:iconTint="#6F6F6F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_picker_date" />
